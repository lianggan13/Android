<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/add_student_view"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/add_student_arrow"
            android:paddingLeft="20dp"
            android:text="添加学生"
            android:textSize="28sp"
            android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/add_student_arrow"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow"
            android:layout_marginEnd="20dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/admin_view"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/add_student_view"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/add_course_view"
            android:layout_centerInParent="true"
            android:paddingLeft="20dp"
            android:text="添加课程"
            android:textSize="28sp"
            android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/add_course_view"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow"
            android:layout_marginEnd="20dp"/>
    </RelativeLayout>

</LinearLayout>